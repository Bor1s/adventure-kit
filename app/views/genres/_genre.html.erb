<div class='row genre'>
  <div class='col-md-12'>
    <p class='title'>
      <%= link_to genre.title, genre %>
      <aside>
        <span class='text-muted'>
          <%= genre.created_at.to_s(:short) %>
        </span>
        <%= render 'management_links', genre: genre if allowed_to_manage_genre?(genre) %>
      </aside>
    </p>
    <p class='description'><%= genre.description %></p>
  </div>
</div>
