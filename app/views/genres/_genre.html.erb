<div class='row'>
  <div class='col-lg-12'>
    <p><%= link_to genre.title, genre %></p>
    <p><%= genre.description %></p>
  </div>
</div>

<% if allowed_to_administrate? %>
  <div class='row'>
    <div class='col-lg-1'>
      <%= button_to genre_path(genre), method: :delete, class: 'btn btn-sm btn-danger', confirm: 'Are you sure?' do %>
        <i class='fa fa-trash-o'></i> Drop
      <% end %>
    </div>

    <div class='col-lg-1'>
      <%= link_to edit_genre_path(genre), class: 'btn btn-sm btn-warning' do %>
        <i class='fa fa-pencil-square-o'></i> Edit
      <% end %>
    </div>
  </div>
<% end %>
