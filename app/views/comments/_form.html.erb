<%= form_for [@game, @comment], data: {remote: true}, html: {role: 'form'} do |f| %>
  <div class="form-group">
    <%= f.text_area :message, placeholder: t('.your_comment'), class: 'form-control input-sm', rows: 5 %>
  </div>

  <div class="form-group">
      <%= f.submit t('games.form.save'), class: 'btn btn-success btn-xs' %>
  </div>
<% end %>
