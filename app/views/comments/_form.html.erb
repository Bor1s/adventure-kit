<%= form_for [@game, @comment], data: {remote: true}, class: 'form-horizontal' do |f| %>
  <div class="form-group">
    <%= f.text_area :message, placeholder: 'Comment message', class: 'form-control', size: '5x5' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
