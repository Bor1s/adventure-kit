<%= form_for [@game, @comment], data: {remote: true}, html: {role: 'form'} do |f| %>
  <div class="form-group col-md-5">
      <%= f.text_area :message, placeholder: 'Comment message', class: 'form-control', rows: 5 %>
  </div>
  <div class="form-group col-md-12">
      <%= f.submit class: 'btn btn-default btn-xs' %>
  </div>
<% end %>
