<% content_for :sidebar do %>
  <%= render 'admin_sidebar' if current_user.master? || current_user.admin? %>
  <aside>
    <header><i class='fa fa-trophy'></i> <%= t('.top_games') %></header>
    <article>
      <ul class='list-unstyled'>
        <% @top_games.each do |top_game| %>
          <li>
            <%= top_game.title %>
            <span class='counter pull-right'><%= top_game.amount %></span>
          </li>
        <% end %>
      </ul>
    </article>
  </aside>

  <aside>
    <header><i class='fa fa-users'></i> <%= t('.recruits') %></header>
    <article>
      <ul class='list-unstyled'>
        <% if @recent_users.present? %>
          <% @recent_users.each do |user| %>
            <li>
              <%= user.name %>
              <small class='text-muted'>- <%= distance_of_time_in_words_to_now(user.created_at) %></small>
            </li>
          <% end %>
        <% else %>
          <%= t('.no_recent_users') %>
        <% end %>
      </ul>
    </article>
  </aside>
<% end %>

<% if @events.present? %>
  <%= render @events %>
<% else %>
  <span class='no-games'><%= t('.no_games') %></span>
<% end %>
