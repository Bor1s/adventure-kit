<div class='row'>
  <div class='col-xs-12 col-sm-12 col-md-12'>
    <%= form_for @tag, html: { role: 'form' } do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control input-sm', placeholder: t('.tag_title'), required: true %>
      </div>

      <div class="form-group">
        <%= f.text_area :description, class: 'form-control input-sm', placeholder: t('.tag_description'), size: '50x10' %>
      </div>

      <%= f.submit t('.save'), class: 'btn btn-success btn-sm' %>
    <% end %>
  </div>
</div>
