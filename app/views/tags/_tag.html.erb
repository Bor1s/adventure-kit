<div class='tag-container'>
  <div class='tag'>
    <%= link_to tag.title, search_tags_path(tag.id) %>
  </div>

  <span class='text-muted'> x <%= tag.games.count %></span>

  <% if current_user.admin? || current_user.master? %>
    <%= link_to edit_tag_path(tag), class: 'pull-right' do %>
      <i class='fa fa-pencil'></i>
    <% end %>
  <% end %>

  <% if tag.editor %>
    <p class='text-muted'>
      Последний редактор: <%= tag.editor.name %>
    </p>
  <% end %>

  <aside>
    <%= tag.description %>
  </aside>
</div>
