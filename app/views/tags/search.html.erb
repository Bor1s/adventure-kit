<% content_for :search_form do %>
  <%= form_tag '/tags', role: 'search', class: 'navbar-form navbar-left', method: :get do %>
    <div class="form-group">
      <input type='text' name='q' class="form-control" placeholder="Поиск тегов">
    </div>
  <% end %>
<% end %>

<% content_for :sidebar do %>
  <aside>
    <header><i class='fa fa-tag'></i> <%= t('.tag_description') %></header>
    <article>
      <span class='tag'>
        <%= @tag.title %>
      </span>
    </article>
  </aside>

  <aside>
    <header><i class='fa fa-tags'></i> <%= t('.general') %></header>
    <article>
      <ul class='list-unstyled'>
        <li><%= t('.total_users') %> <span class='badge pull-right'><%= @users.count %></span></li>
        <li><%= t('.total_games') %> <span class='badge pull-right'><%= @games.count %></span></li>
      </ul>
    </article>
  </aside>
<% end %>

<div class='row'>
  <div class='col-md-6'>
    <aside>
      <header><i class='fa fa-gamepad'></i> <%= t('.games') %></header>
      <%= render @games %>
    </aside>
  </div>

  <div class='col-md-6'>
    <aside>
      <header><i class='fa fa-users'></i> <%= t('.users') %></header>
      <%= render partial: 'user', collection: @users %>
    </aside>
  </div>
</div>
