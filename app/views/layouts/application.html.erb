<!DOCTYPE html>
<html>
<head>
  <title><%= t('site_name') %></title>
  <meta name="viewport" content="width=device-width, minimum-scale=1.0, initial-scale=1, user-scalable=yes">
  <%= favicon_link_tag %>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= html_import_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>

<body unresolved fullbleed>
  <core-drawer-panel rightDrawer>
    <core-header-panel main>
      <core-toolbar>
        <span flex><%= t('site_name') %></span>
        <core-icon-button icon="menu" core-drawer-toggle></core-icon-button>
      </core-toolbar>

      <%= yield %>
    </core-header-panel>

    <core-header-panel id='game_drawer' drawer>
      <core-toolbar justify='end'>
        <core-tooltip label='Мой профиль'>
          <%= link_to path_to_current_user_profile do %>
            <paper-shadow z='1' class='round'>
              <%= image_tag current_user.avatar.medium.url, class: 'round' %>
              <paper-ripple fit class="recenteringTouch circle white-ripple"></paper-ripple>
            </paper-shadow>
          <% end %>
        </core-tooltip>

        <core-tooltip label='Выход'>
          <%= link_to signout_path do %>
            <core-icon icon='exit-to-app'></core-icon>
          <% end %>
        </core-tooltip>
      </core-toolbar>

      <%= yield :sidebar %>
    </core-header-panel>

  </core-drawer-panel>
</body>
</html>
