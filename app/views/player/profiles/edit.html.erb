<div class='col-xs-4 col-xs-offset-1 col-sm-4 col-sm-offset-1 col-md-4 col-md-offset-1'>
  <%= form_for [:player, @profile], url: player_profile_path, method: 'PATCH', html: { class: 'form-horizontal', role: 'form' } do |f| %>
    <div class="form-group">
      <%= image_tag @profile.avatar, class: 'profile-avatar' if @profile.avatar.present? %>
      <aside class='bio'>
        <%= @profile.name %><br />
        <small><%= I18n.t("general.#{@profile.human_role}") %></small>
      </aside>
    </div>

    <div class="form-group">
      <%= f.email_field :email, class: 'form-control input-sm', placeholder: 'youremail@example.com' %>
    </div>

    <div class="form-group">
      <%= f.hidden_field :tag_ids, id: 'tags', data: {pre: @profile.tags.tokenize}, style: 'min-width: 390px; width: auto; font-size: 12px;' %>
    </div>

    <div class="form-group">
      <% if current_user.waiting_for_acceptance? %>
        <%= t('.wait_approval') %>
      <% else %>
        <div class='checkbox'>
          <%= f.check_box :want_to_be_master %>
          <%= f.label :want_to_be_master, t('.want_to_be_master') %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.submit t('.update'), class: 'btn btn-success btn-sm' %>
    </div>
  <% end %>
</div>
