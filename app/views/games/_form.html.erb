<div class='container'>
  <div class='row'>
    <%= errors_for @game %>
  </div>
  <div class='row'>
    <%= form_for @game, html: { class: 'form-horizontal', role: 'form' } do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: 'Genre Title' %>
      </div>

      <div class="form-group">
        <%= f.text_area :description, class: 'form-control', placeholder: 'Game Description', size: '50x10' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
