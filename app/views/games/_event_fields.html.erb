<div class='row'>
<div class='nested-fields'>
  <div class='col-md-4'>
    <div class="form-group">
      <%= image_tag(asset_path(f.object.poster.medium.url), class: 'poster') %><br />
      <% if f.object.poster? %>
        <%= f.label :remove_poster, class: 'checkbox-inline input-sm remove-poster' do %>
          <%= f.check_box :remove_poster %><%= t('.remove_poster') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class='col-md-4'>
    <div class="form-group">
      <%= f.text_area :description, class: 'form-control input-sm', required: true, placeholder: 'Event title' %>
    </div>

    <div class="form-group">
      <div class="input-group">
        <%= f.text_field :beginning_at, value: f.object.beginning_at.try(:to_s, :db), class: 'form-control input-sm dtpicker' %>
        <span class="input-group-btn">
          <%= button_tag class: 'btn btn-default btn-sm calendar' do %>
            <i class='fa fa-calendar'></i>
          <% end %>
        </span>
      </div>
    </div>

    <div class="form-group poster">
      <%= f.file_field :poster, class: 'form-control input-sm' %>
      <%= f.hidden_field :poster_cache %>
    </div>
  </div>

  <div class='col-md-4'>
    <div class="form-group">
      <%= link_to_remove_association f, class: 'btn btn-xs btn-danger pull-right' do %>
        <i class='fa fa-trash-o'><%= t('.remove') %></i>
      <% end %>
    </div>
  </div>
</div>
</div>
