<div class='nested-fields'>
    <div class="form-group">
      <%= f.text_area :description, class: 'form-control input-sm', placeholder: 'Event title' %>
    </div>

    <% if f.object.poster? %>
      <div class="form-group">
        <%= image_tag(f.object.poster.thumb.url, class: 'poster') %>
        <%= f.label :remove_poster, class: 'checkbox-inline input-sm' do %>
          <%= f.check_box :remove_poster %><%= t('.remove_poster') %>
        <% end %>
      </div>
    <% end %>

    <div class="form-group poster">
      <%= f.file_field :poster, class: 'form-control input-sm' %>
      <%= f.hidden_field :poster_cache %>
    </div>

  <div class="form-group">
    <%= link_to_remove_association f, class: 'btn btn-xs btn-danger' do %>
      <i class='fa fa-trash-o'><%= t('.remove') %></i>
    <% end %>
  </div>
</div>
