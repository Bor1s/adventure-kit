<h3>Список игроков</h3>
<% @game.players.each do |player| %>
  <p>
    <%= player.nickname %>
    <%= link_to remove_player_game_path(id: @game.id, user_id: player.id),
      class: 'danger',
      method: :delete,
      data: {confirm: 'Вы уверены, что хотите удалить этого игрока из игры?'}, remote: true do %>
      <i class='fa fa-trash'></i>
    <% end %>
  </p>
<% end %>
