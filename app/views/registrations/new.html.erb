<paper-shadow z='1' id='login'>
  <h3>Вход</h3>
  <div horizontal layout>
    <div class='login-form'>
      <login-form></login-form>
    </div>

    <div class='providers'>
      <aside id="login-tip">Используйте ваш аккаунт в соцсетях для входа</aside>
      <p>
        <%= link_to "/login?provider=vkontakte" do %>
          <paper-button class="vk-link" raised><i class="fa fa-lg fa-vk"></i></paper-button>
        <% end %>
      </p>

      <p>
        <%= link_to "/login?provider=glpus" do %>
          <paper-button class="gplus-link" raised><i class="fa fa-lg fa-google-plus"></i></paper-button>
        <% end %>
      </p>
    </div>
  </div>
</paper-shadow>

<paper-shadow z='1' id='register'>
  <h3>Регистрация</h3>
  <register-form form_path="<%= registrations_path %>"></register-form>
</paper-shadow>
