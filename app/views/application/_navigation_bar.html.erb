<div class='topbar'>
  <nav class='container navbar navbar-default navbar-light' role='navigation'>

    <ul class='nav navbar-nav toplinks'>
      <li class='<%= current_tab?('games') ? 'active' : '' %>'><%= link_to 'Games', games_path %></li>
      <li class='<%= current_tab?('genres') ? 'active' : '' %>'><%= link_to 'Genres', genres_path %></li>
      <li class='<%= current_tab?('masters') ? 'active' : '' %>'><%= link_to 'Masters', masters_path %></li>
      <li class='<%= current_tab?('players') ? 'active' : '' %>'><%= link_to 'Players', players_path %></li>
    </ul>

    <ul class='nav navbar-nav navbar-right'>
      <li>
        <%= link_to edit_profile_path, class: 'profile-link' do %>
          <%= image_tag current_user.avatar, size: '30x30' %>
          <%= current_user.name %>
        <% end %>
      </li>
      <li>
        <%= link_to signout_path do %>
          <i class='fa fa-sign-out'></i>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
