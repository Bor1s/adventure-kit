<div class='container topbar'>
  <nav class='navbar navbar-default navbar-light' role='navigation'>
    <div class='navbar-header'>
      <%= link_to 'Play Hard Core', root_path, class: 'navbar-brand' %>
    </div>

    <ul class='nav navbar-nav toplinks'>
      <li class='<%= current_tab?('genres') ? 'active' : '' %>'><%= link_to 'Genres', genres_path %></li>
      <li class='<%= current_tab?('games') ? 'active' : '' %>'><%= link_to 'Games', '#' %></li>
      <li class='<%= current_tab?('masters') ? 'active' : '' %>'><%= link_to 'Masters', masters_path %></li>
      <li class='<%= current_tab?('players') ? 'active' : '' %>'><%= link_to 'Players', '#' %></li>
    </ul>

    <ul class='nav navbar-nav navbar-right'>
      <li class='dropdown'>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag current_user.avatar, class: 'img-rounded', size: '30x30' %>&nbsp;<b class="caret"></b></a>
        <% if current_user.admin? %>
          <%= render 'admin_menu' %>
        <% elsif current_user.master? %>
          <%= render 'master_menu' %>
        <% elsif current_user.player? %>
          <%= render 'master_menu' %>
        <% end %>
      </li>
    </ul>
  </nav>
</div>
